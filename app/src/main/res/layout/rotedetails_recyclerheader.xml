<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/mheader_iamge"
        android:layout_width="match_parent"
        android:layout_height="350px" />
        <com.zhy.autolayout.AutoRelativeLayout
            android:paddingRight="30px"
            android:layout_below="@id/mheader_iamge"
            android:paddingLeft="30px"
            android:layout_width="match_parent"
            android:layout_height="225px">
            <TextView
                android:id="@+id/ddbh"
                android:text="订单编号：201704052365"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ykxm"
                android:layout_below="@id/ddbh"
                android:text="游客姓名：王小花"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/yknld"
                android:layout_below="@id/ykxm"
                android:text="游客年龄段：青年团"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/cxsj"
                android:layout_below="@id/yknld"
                android:text="出行时间：2017/02/12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/lxmc"
                android:text="路线名称：云南5日游"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoRelativeLayout>
        <View
            android:background="#eaebed"
            android:layout_width="match_parent"
            android:layout_height="17px"
            />
   <com.zhy.autolayout.AutoRelativeLayout
       android:layout_width="match_parent"
       android:layout_height="100px">
       <ImageView
           android:id="@+id/flag4"
           android:layout_marginLeft="32px"
           android:src="@mipmap/ic_launcher"
          android:layout_centerVertical="true"
           android:layout_width="35px"
           android:layout_height="30px" />
       <TextView
           android:layout_toRightOf="@id/flag4"
           android:gravity="center_vertical"
           android:paddingLeft="15px"
           android:layout_width="match_parent"
           android:text="路线行程"
           android:layout_height="100px" />
   </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
